{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "./dist/lib",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "jsx": "react"
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/**/*.test.tsx", "./src/**/*.stories.tsx"]
}
