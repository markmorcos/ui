{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "./dist/lib",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "es5"
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/**/*.test.tsx", "./src/**/*.stories.tsx"]
}
